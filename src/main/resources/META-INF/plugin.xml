<idea-plugin>
    <id>com.soniyck.taborganizer</id>
    <name>Tab Organizer</name>
    <description>An IntelliJ plugin supporting sorting of opened tabs and grouping them based on their path.</description>
    <version>1.0</version>
    <vendor email="antonin.houdek8@gmail.com" url="https://github.com/Soniyck">Soniyck</vendor>

    <applicationListeners>
        <listener class="com.soniyck.taborganizer.TabOrganizerManager" topic="com.intellij.openapi.fileEditor.FileEditorManagerListener"/>
    </applicationListeners>

    <depends>com.intellij.modules.rider</depends>
</idea-plugin>